<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>

		.button {
		margin: 0 auto;
		width: 145px;
		display: flex;
		justify-content: center;
		}
		
		.button > i {
		margin: 3px 3px;
	}
	</ui:style>


	<b:Container fluid="true">
		<b:Row>
			<b:Column size="SM_12">
			
				<b:Button ui:field="newGameButton" icon="PLAY_CIRCLE_O" addStyleNames='{style.button}' text=" New Game"></b:Button>
				<h:Br></h:Br>
				<b:Button ui:field="highScoresButton" icon="LIST_ALT" addStyleNames='{style.button}' text="High Scores"></b:Button>
				<h:Br></h:Br>
				<b:Button ui:field="addQuestionsButton" icon="PLUS_CIRCLE" addStyleNames='{style.button}' text="Add Questions"></b:Button>

			</b:Column>
		</b:Row>
	</b:Container>

</ui:UiBinder>