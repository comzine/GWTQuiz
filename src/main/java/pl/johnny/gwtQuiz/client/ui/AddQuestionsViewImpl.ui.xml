<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.center {
		text-align: center;
	}
	
	.ansBut {
		word-break: break-all;
	}
	
	.questionImage {
		margin: 10px auto 1px;
	}
	
	.h4Margin {
		margin-top: 25px;
	}
	
	</ui:style>
	<g:HTMLPanel>

		<b:Container fluid="true">
			<b:Row addStyleNames='{style.center}'>
				<b:Column size="XS_3">

				</b:Column>
				<b:Column size="XS_3">

				</b:Column>
				<b:Column size="XS_3">

				</b:Column>
				<b:Column size="XS_3">

				</b:Column>
			</b:Row>

			<b:Row>
				<b:Column size="SM_12">
					<!-- <h:Hr></h:Hr> -->

					<g:HTMLPanel>
						<b:Panel>

							<b:PanelHeader>
							
								<b:Form ui:field="form">
								
								<b:Legend>Edit Question</b:Legend>
								
									<b:FormGroup>
									<b:FormLabel for="categorySelect">Category</b:FormLabel>
										<b:ListBox b:id="categorySelect" ui:field="categoryListBox">
											<g:item>Choose your question category...</g:item>
										</b:ListBox>
									</b:FormGroup>

									<b:PanelGroup b:id="accordion">
									<b:FormLabel >Image</b:FormLabel>
										<b:Panel>
											<b:PanelHeader dataToggle="COLLAPSE"
												dataParent="#accordion2" dataTarget="#collapseOne">
												<b:Heading size="H4" text="Add image to question?" />
											</b:PanelHeader>
											<b:PanelCollapse b:id="collapseOne">
												<b:PanelBody>
													<g:HTMLPanel ui:field="imageWidget"></g:HTMLPanel>
												</b:PanelBody>
											</b:PanelCollapse>
										</b:Panel>
									</b:PanelGroup>

									<b:FormGroup>
										<b:FormLabel for="formName">Question</b:FormLabel>
										<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE"></b:InlineHelpBlock>
										<b:TextBox maxLength="50" placeholder="Fill in your question..."
											b:id="formName" validateOnBlur="true" allowBlank="false" />
									</b:FormGroup>

									<b:FormGroup>
										<b:FormLabel for="answer1">First answer</b:FormLabel>
										<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE"></b:InlineHelpBlock>
										<b:TextBox placeholder="Fill in your answer!"
											maxLength="20" addStyleNames='{style.ansBut}' b:id="answer1" validateOnBlur="true"
											allowBlank="false" />
									</b:FormGroup>

									<b:FormGroup>
										<b:FormLabel for="answer2">Second answer</b:FormLabel>
										<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE"></b:InlineHelpBlock>
										<b:TextBox placeholder="Fill in your answer!"
											maxLength="20" addStyleNames='{style.ansBut}' b:id="answer2" validateOnBlur="true"
											allowBlank="false" />
									</b:FormGroup>

									<b:FormGroup>
										<b:FormLabel for="answer3">Third answer</b:FormLabel>
										<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE"></b:InlineHelpBlock>
										<b:TextBox placeholder="Fill in your answer!"
											maxLength="20" addStyleNames='{style.ansBut}' b:id="answer3" validateOnBlur="true"
											allowBlank="false" />
									</b:FormGroup>

									<b:FormGroup>
										<b:FormLabel for="answer4">Fourth answer</b:FormLabel>
										<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE"></b:InlineHelpBlock>
										<b:TextBox placeholder="Fill in your answer!"
											maxLength="20" addStyleNames='{style.ansBut}' b:id="answer4" validateOnBlur="true"
											allowBlank="false" />
									</b:FormGroup>

									<b:FormGroup>
										<b:FormLabel 
											for="correctAnsSelect">Which answer is correct? </b:FormLabel>
										<b:ListBox b:id="correctAnsSelect" ui:field="correctAnsSelect">
											<g:item>Which answer is correct?</g:item>
											<g:item>First</g:item>
											<g:item>Second</g:item>
											<g:item>Third</g:item>
											<g:item>Fourth</g:item>
										</b:ListBox>
									</b:FormGroup>
									
									<b:Button ui:field="formValidateButton">Validate</b:Button>
									<b:Button ui:field="formResetButton">Reset</b:Button>
								</b:Form>
								
							</b:PanelHeader>

							<b:PanelBody addStyleNames="text-center">

							</b:PanelBody>

							<b:PanelFooter>

							</b:PanelFooter>

						</b:Panel>

					</g:HTMLPanel>
				</b:Column>
			</b:Row>
		</b:Container>

	</g:HTMLPanel>
</ui:UiBinder> 