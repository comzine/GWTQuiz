<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>

		<b:Container fluid="true">
			<b:Row>
				<b:Column size="SM_12">

					<b:Panel>
						<b:PanelHeader>
							<b:Heading size="H3" text="Admin Login" />
						</b:PanelHeader>

						<b:PanelBody>

							<b:Form ui:field="form">
								<b:FieldSet>
									<b:FormGroup>
										<b:FormLabel for="username" text="User"></b:FormLabel>
										<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
										<b:TextBox b:id="username" ui:field="email" validateOnBlur="true" allowBlank="false" maxLength="20"/>
									</b:FormGroup>
									<b:FormGroup>
										<b:FormLabel for="password" text="Password"></b:FormLabel>
										<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
										<b:Input type="PASSWORD" min="3" ui:field="password" validateOnBlur="true" b:id="password" allowBlank="false" maxLength="20"/>
									</b:FormGroup>
								</b:FieldSet>
							</b:Form>

						</b:PanelBody>

						<b:PanelFooter addStyleNames="text-center add-form-buttons">

							<b:Button ui:field="loginButton" type="PRIMARY" text="Log in"></b:Button>

						</b:PanelFooter>
					</b:Panel>


				</b:Column>
			</b:Row>
		</b:Container>

	</g:HTMLPanel>
</ui:UiBinder> 