<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.panelBody {
		text-align: center;
	}
	
	.ansBut {
		margin: 5px 5px;
		min-width: 20%;
		max-width: 35%;
		word-break: break-all;
	}
	
	.pointColumn {
		text-align: right;
		padding-top: 5px;
	}
	</ui:style>
	<g:HTMLPanel>

		<b:Container fluid="true">
			<b:Row>
				<b:Column size="XS_6">
					<b:Heading size="H2" text="Question nmbr" ui:field="questionCounter" />
				</b:Column>
				<!-- <b:Column size="XS_3"></b:Column> -->
				<b:Column size="XS_3">
					<b:Heading size="H3" text="" subText="" ui:field="timerCounter" />
				</b:Column>
				<b:Column size="XS_3" addStyleNames='{style.pointColumn}'>
					<b:Heading size="H3" text="nmbr points" subText=""
						ui:field="pointsCounter" />
				</b:Column>
			</b:Row>

			<b:Row>
				<b:Column size="SM_12">
					<h:Hr></h:Hr>
					
					<b:Progress active="true" type="STRIPED">
						<b:ProgressBar type="SUCCESS"  ui:field="progressBar"/>
					</b:Progress>
					
					<g:HTMLPanel addStyleNames='{style.panelBody}'>
						<b:Panel>
							<b:PanelHeader>
								<g:Label ui:field="qstnLbl"></g:Label>
							</b:PanelHeader>
							<b:PanelBody>
								<b:Button ui:field="btn0" text="questionButton"
									addStyleNames='{style.ansBut}'></b:Button>
								<b:Button ui:field="btn1" text="questionButton"
									addStyleNames='{style.ansBut}'></b:Button>
								<b:Button ui:field="btn2" text="questionButton"
									addStyleNames='{style.ansBut}'></b:Button>
								<b:Button ui:field="btn3" text="questionButton"
									addStyleNames='{style.ansBut}'></b:Button>
							</b:PanelBody>
							<b:PanelFooter>
								<g:Button ui:field="prvsQstBtn" text="Previous Question"
									visible="false"></g:Button>
							</b:PanelFooter>
						</b:Panel>

					</g:HTMLPanel>
				</b:Column>
			</b:Row>
		</b:Container>

		<!-- MODAL -->
		<b:Modal title="FINISHED!" closable="true" fade="true"
			dataBackdrop="STATIC" dataKeyboard="true" b:id="myModal" ui:field="modal">
			<b:ModalBody>
				<g:Label ui:field="modalPointsLabel"></g:Label>
			</b:ModalBody>
			<b:ModalFooter>
				<b:Button type="DANGER" dataDismiss="MODAL" ui:field="modalCloseBtn">Close</b:Button>
			</b:ModalFooter>
		</b:Modal>
	</g:HTMLPanel>
</ui:UiBinder> 