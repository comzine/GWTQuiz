<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<!-- @author jzarewicz -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.panelBody {
		text-align: center;
	}
	
	.ansBut {
		margin: 5px 5px;
		min-width: 20%;
		max-width: 35%;
		word-break: break-all;
	}
	
	.questionImage {
		margin: 10px auto 1px;
	}
	
	.h4Margin {
		margin-top: 25px;
	}
	</ui:style>
	<g:HTMLPanel>

		<b:Container fluid="true">
			<b:Row addStyleNames='{style.panelBody}'>
				<b:Column size="XS_3">
					<b:Heading size="H3" subText="Question" ui:field="questionCounter" />
				</b:Column>
				<b:Column size="XS_3">
					<b:Heading size="H3" text="nmbrPoints" subText="Point/s"
						ui:field="pointsCounter" />
				</b:Column>
				<b:Column size="XS_3">
					<b:Heading size="H4" text="category" subText=""
						ui:field="categoryField" addStyleNames='{style.h4Margin}' />
				</b:Column>
				<b:Column size="XS_3">
					<b:Heading size="H4" text="Qstn" subText="'s author"
						ui:field="authorField" addStyleNames='{style.h4Margin}'
						title="Shows how is the actual question contributor" />
				</b:Column>
			</b:Row>

			<b:Row>
				<b:Column size="SM_12">
					<h:Hr></h:Hr>

					<b:Progress active="true" type="STRIPED">
						<b:ProgressBar type="SUCCESS" ui:field="progressBar" />
					</b:Progress>

					<g:HTMLPanel addStyleNames='{style.panelBody}'>
						<b:Panel>
							<b:PanelHeader>
								<b:Heading size="H1" ui:field="qstnLbl"></b:Heading>
								<b:Image type="ROUNDED" url="" ui:field="questionImage"
									addStyleNames='{style.questionImage}' visible="false"
									responsive="true" />
							</b:PanelHeader>
							<b:PanelBody>
								<b:Button ui:field="btn0" text="questionButton"
									addStyleNames='{style.ansBut}'></b:Button>
								<b:Button ui:field="btn1" text="questionButton"
									addStyleNames='{style.ansBut}'></b:Button>
								<b:Button ui:field="btn2" text="questionButton"
									addStyleNames='{style.ansBut}'></b:Button>
								<b:Button ui:field="btn3" text="questionButton"
									addStyleNames='{style.ansBut}'></b:Button>
							</b:PanelBody>
							<b:PanelFooter>
								<g:Button ui:field="prvsQstBtn" text="Previous Question"
									visible="false"></g:Button>
							</b:PanelFooter>
						</b:Panel>

					</g:HTMLPanel>
				</b:Column>
			</b:Row>
		</b:Container>

		<!-- MODAL -->
		<b:Modal title="FINISHED!" closable="false" fade="true"
			dataBackdrop="STATIC" dataKeyboard="false" b:id="myModal" ui:field="modal">
			<b:ModalBody ui:field="modalBody">

				<b:Alert type="SUCCESS" ui:field="modalAlert">
					<h:Strong  ui:field="modalPointsLabel"/>
					<h:Strong ui:field="actualRecordPositionLabel" />
					<h:Br></h:Br>
					<h:Text text="Please fill in your name below! :) " />
				</b:Alert>

				<h:Hr></h:Hr>
			</b:ModalBody>
			<b:ModalFooter>
				<b:Button type="DANGER" dataDismiss="MODAL" ui:field="modalCloseBtn">Close</b:Button>
			</b:ModalFooter>
		</b:Modal>
	</g:HTMLPanel>
</ui:UiBinder> 